---
import { Icon } from 'astro-icon/components';
import { t } from '../i18n/utils';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
---

<footer class="bg-misaek border-t border-changho">
  <div class="py-8 max-w-6xl mx-auto px-6 md:px-8 lg:px-12">
    <div class="flex flex-col gap-4 text-center md:flex-row md:items-center md:justify-between md:text-left">
      <!-- 로고 -->
      <span class="font-gmarket text-lg text-meok">띵동</span>

      <!-- 크레딧 -->
      <p class="text-sm text-onggi flex items-center justify-center gap-1">
        {t('footer.madeWith', lang)}
        <Icon name="ph:heart-fill" class="w-4 h-4 text-onggi-red" />
        {t('footer.byAuthor', lang)}
      </p>

      <!-- 링크들 -->
      <div class="flex items-center justify-center md:justify-end gap-4">
        <a
          href="https://github.com/CaesiumY/dding-dong"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1.5 text-sm text-onggi hover:text-meok transition-colors duration-200"
        >
          <Icon name="ph:github-logo-duotone" class="w-4 h-4" />
          {t('footer.github', lang)}
        </a>
        <span class="text-sm text-onggi border border-changho rounded px-2 py-0.5">
          {t('footer.license', lang)}
        </span>
      </div>
    </div>
  </div>
</footer>
