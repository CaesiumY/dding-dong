---
import { Icon } from 'astro-icon/components';
import { t, tData } from '../i18n/utils';

interface Props {
  lang: string;
}

const { lang } = Astro.props;

interface FeatureItem {
  icon: string;
  title: string;
  description: string;
}

const items = tData<FeatureItem[]>('features.items', lang);
---

<section id="features" class="bg-misaek">
  <div class="py-24 md:py-32 lg:py-40 max-w-6xl mx-auto px-6 md:px-8 lg:px-12">
    <h2 class="text-[length:var(--text-h1)] font-bold text-meok">
      {t('features.heading', lang)}
    </h2>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
      {items?.map((item) => (
        <div class="reveal rounded-2xl bg-hanji p-6 border border-changho">
          <Icon name={item.icon} class="w-8 h-8 text-hobak mb-4" />
          <h3 class="font-semibold text-lg text-meok mb-2">{item.title}</h3>
          <p class="text-onggi text-sm leading-relaxed">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
